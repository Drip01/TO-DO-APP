<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.todolist.controllers.ForgotPasswordController"
            prefWidth="400" prefHeight="350"
            xmlns="http://javafx.com/javafx/17.0.12">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding><Insets top="30" left="20" right="20" bottom="20"/></padding>

            <Label text="Reset Your Password" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="emailField" promptText="Enter your registered email" />
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" />

            <Button text="Reset Password" onAction="#handleReset"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
            <Button text="Back to Login" onAction="#handleBackToLogin"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
        </VBox>
    </center>
</BorderPane>
